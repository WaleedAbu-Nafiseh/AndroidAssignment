<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    tools:context=".view.cloths.ClothesListActivity"
     android:background="#F41C8A"   >

    <ImageView
        android:id="@+id/clothesimage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:padding="15dp" />

    <TextView
        android:id="@+id/BrandName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:fontFamily="@font/creepster"
        android:padding="15dp"
        android:textColor="#fff"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/itemSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:fontFamily="@font/creepster"
        android:padding="15dp"
        android:textColor="#fff"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/itemsale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/creepster"
        android:padding="15dp"
        android:textColor="#fff"
        android:textSize="32dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="1dp"

        android:orientation="horizontal">

        <Button
            android:layout_width="140dp"
            android:layout_height="74dp"
            android:background="@drawable/btns"
            android:onClick="selectClothItem"
            android:text="Select"
            android:textColor="#000"
            android:textSize="20dp"

            />

        <Button
            android:id="@+id/backbutton"
            android:layout_width="140dp"
            android:layout_height="74dp"
            android:background="@drawable/btns"
            android:text="Home"
            android:textColor="#000"
            android:textSize="20dp"


            />


    </LinearLayout>


</LinearLayout>